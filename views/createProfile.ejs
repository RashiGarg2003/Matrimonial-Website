<%- include ('partials/header') %>
<div class="container">
  <h1>Create Your Profile</h1>
  <form action="/profile/create" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="bio">Bio:</label>
      <textarea name="bio" id="bio" class="form-control" required></textarea>
    </div>
    <div class="form-group">
      <label for="gender">Gender:</label>
     
     <select name="gender" id="gender" style="width: 1080px; height: 40px">
      <option value="">Select</option>
      <option value="Male">Male</option>
      <option value="Female">Female</option>
    </select>

    
    </div>
    <div class="form-group">
      <label for="age">Age:</label>
      <input type="number" name="age" id="age" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="dateOfBirth">Date of Birth:</label>
      <input type="date" name="dateOfBirth" id="dateOfBirth" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="maritalStatus">Marital Status:</label>
      
      <select name="maritalStatus" id="maritalStatus" style="width: 1080px; height: 40px">
        <option value="">Select</option>
        <option value="Single">Single</option>
        <option value="Divorced">Divorced</option>
        <option value="Awaiting Divorce">Awaiting Divorce</option>
        <option value="Widowed">Widowed</option>
        
      </select>
    </div>

    <div class="form-group">
      <label for="motherTongue">Mother Tongue:</label>
      
      <select name="motherTongue" style="width: 1080px; height: 40px">
        <optgroup label="North">
          <option selected="selected" value="0">Select element</option>
          <option value="2">Hindi</option>
          <option value="3">Awadhi</option>
          <option value="4">Bhojpuri</option>
          <option value="5">Garhwali</option>
          <option value="6">Punjabi</option>
          <option value="7">Bihari</option>
          <option value="8">Rajasthani</option>
          <option value="9">Bhojpuri</option>
          <option value="10">Haryanvi</option>
          <option value="11">Himachali/Pahari</option>
          <option value="12">Kashmiri/Dogri</option>
          <option value="13">Sindhi</option>
          <option value="14">Urdu</option>
        </optgroup>
        <optgroup label="West">
          <option value="5">Marathi</option>
          <option value="6">Gujrati</option>
          <option value="7">Kuchi</option>
          <option value="8">Konkani</option>
          <option value="9">Sindhi</option>
          <option value="10">Hindi/Madhya Pradesh/Bundelkhand/Chattisgarhi</option>
          
        </optgroup>
        <optgroup label="South">
          <option value="11">Tamil</option>
          <option value="12">Telugu</option>
          <option value="13">Kannada</option>
          <option value="14">Malyalam</option>
          <option value="15">Tulu</option>
          <option value="16">Urdu</option>
        </optgroup>
        <optgroup label="East">
          <option value="17">Bengali</option>
          <option value="18">Oriya</option>
          <option value="19">Assamese</option>
          <option value="20">Sikkim/Nepali/Lepdha/Bhutia/Limbu</option>
        </optgroup>
        <option value="21"  style="font-weight:bold">English</option>
    </select>
    </div>

    <div class="form-group">
      <label for="religion">Religion</label>
      
      <select name="religion" id="religion" style="width: 1080px; height: 40px">
        <option value="">Select</option>
        <option value="Hindu">Hindu</option>
        <option value="Muslim">Muslim</option>
        <option value="Sikh">Sikh</option>
        <option value="Christian">Christian</option>
        <option value="Buddhist">Buddhist</option>
        <option value="Jain">Jain</option>
        <option value="Parsi">Parsi</option>
        <option value="Jewish">Jewish</option>
      </select>
    </div>
   
    <div class="form-group">
      <label for="interests">Interests (comma separated):</label>
      <input type="text" name="interests" id="interests" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="height">Height (cm):</label>
      <input type="number" name="height" id="height" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="State">State:</label>
      <input type="text" name="State" id="State" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="city">City/Area/Village:</label>
      <input type="text" name="city" id="city" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="pincode">Pincode:</label>
      <input type="text" name="pincode" id="pincode" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="Location">Gail Location:</label>
      <input type="text" name="Location" id="Location" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="department">Department:</label>
      <input type="text" name="department" id="department" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="profilePic">Profile Picture</label>
      <input type="file" name="profilePic" id="profilePic" class="form-control-file">
    </div>
    <button type="submit" class="btn btn-primary">Create Profile</button>
  </form>
</div>
<%- include ('partials/footer') %>
